<body>

  <div class="container-fluid mt-4">
    <div class="row">
      {{#each orderProducts}}
      <div class="col-md mt-3">
        <div class="card" style="width: 16rem;">
          <form action="/myorders" method="post">
            <img src="/images/product/{{this.img}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h4 class="text-uppercase">{{this.Name}}</h4>
              <p class="card-text">{{this.des}}</p>
              <p class="card-text">{{this.price}}</p>
                <p class="card-text">{{this.status}}</p>
              <br>


          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  </div>
</body>

